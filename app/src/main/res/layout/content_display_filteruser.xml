<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/googleimages"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DisplayFilteruserActivity"
    tools:showIn="@layout/activity_display_filteruser">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="#a2336aa9"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iduserimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight=".1"
        android:src="@drawable/profile"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight=".9"
    android:drawablePadding="60dp"
    android:layout_marginLeft="5dp"
    android:layout_gravity="center"
    android:orientation="vertical">
        <TextView
            android:id="@+id/idusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Username"/>
    <TextView
        android:id="@+id/idcountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Country"/>
</LinearLayout>
    </LinearLayout>
</RelativeLayout>